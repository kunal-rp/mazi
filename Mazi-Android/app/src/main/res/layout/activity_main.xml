<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mazi.android.ParkingMapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
          android:layout_marginTop="15dp"
            android:id="@+id/toolbar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:minHeight="?android:attr/actionBarSize"
            android:elevation="3dp"
            android:background="@android:color/background_light"
            android:theme="@android:style/ThemeOverlay.Material.Light"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
            android:layout_height="wrap_content">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/collegeMenu"
            android:layout_alignParentStart="true"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/requestRideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="27dp"
        android:clickable="true"
        app:fabSize="auto"
        app:srcCompat="@color/colorAccent"
        android:onClick="requestRide"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/toolbar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/requestParkingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="auto"
        app:srcCompat="@color/colorPrimary"
        android:onClick="requestParking"
        android:layout_alignTop="@+id/requestRideButton"
        android:layout_alignStart="@+id/toolbar"
        android:layout_marginStart="32dp" />


</RelativeLayout>